<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ahmad.footbalmatch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.detail.detailMatch.DetailActivity"
            android:label="Match Detail"
            android:parentActivityName=".view.main.MainActivity" />
        <activity
            android:name=".view.detail.detailTeam.DetailTeamActivity"
            android:label="Team Detail"
            android:parentActivityName=".view.main.MainActivity" />
        <activity android:name=".view.main.search.SearchMatchActivity" />
        <activity android:name=".view.detail.detailTeam.player.playerDetail.PlayerDetailActivity" />
        <activity android:name=".view.authentication.LoginActivity" />
        <activity android:name=".view.main.news.detailNews.DetailNewsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".view.main.news.webView.WebViewActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>